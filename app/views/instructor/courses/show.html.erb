<div class="show-course-content booyah-box col-xs-10 col-xs-offset-1">

  <div class="text-center">
    <!-- Course info -->
    <%= render 'courses/info' %>
  </div>

  <div class="student-panel-wrapper col-xs-10 col-xs-offset-1 text-center">
    <%= link_to 'Student view', course_path(@course), 
      :class => 'btn btn-primary' %>
  </div>
  
  <div class="add-section">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), 
      :class => 'btn btn-success' %>
  </div>

  <br class="clr" />
  <%= render 'courses/sections_list' %>

</div>