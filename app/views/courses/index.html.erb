<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <br />

  <% @courses.each do |course| %>
    <h2 class="course-listings">
      <%= link_to course.title, course_path(course) %>
    </h2>
    <%= image_tag course.image, :class => "imgs img-responsive" %>
    <div class="course-description col-sm-9 col-xs-12">
      <%= simple_format course.description %>
    </div>
    <div class="col-sm-3 col-xs-12">
      <%= link_to 'More Details', course_path(course), :class => 'btn btn-success btn pull-right' %>
    </div>
    <br class="clr" />
  <% end %>
</div>