<ul class="course-sections-list">
  <% @course.sections.each do |section| %>
    <li>
      <%= section.title %>
      <%= link_to 'New Lesson', new_instructor_section_lesson_path(section),
      :class => "pull-right btn btn-success btn-s" %>

      <ul>
        <% section.lessons.each do |lesson| %>
          <li>
            <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
          </li>
        <% end %>
      </ul>

      <br class="clr" />
    </li>
  <% end %>
</ul>